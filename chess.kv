<ChessBoard>:   

<ChessBoardNClocks@BoxLayout>:
    orientation: 'vertical'
    size_hint: None,None
    width: 600
    height: 630
    BoxLayout:
        size_hint: 1,None
        height: 25
        Label:
            id: black_player_banner
            text: "Black player name"
            size_hint: 2,None
            background_color: (1,0,0,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            height: 25
        Label:
            id: black_player_clock
            size_hint: 1,None
            text: "00:00"
            font_size: "30dp"
            font_name: "./fonts/Lcd.ttf"
            height: 25
    ChessBoard:
    BoxLayout:
        size_hint: 1,None
        height: 25
        Label:
            id: white_player_clock
            size_hint: 1,None
            text: "00:00"
            font_size: "30dp"
            font_name: "./fonts/Lcd.ttf"
            height: 20
        Label:
            id: white_player_banner
            text: "White player name"
            size_hint: 2,None
            background_color: (120/255,238/255,62/255,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            height: 22

<Cell>:

<Options@BoxLayout>:
    orientation: "vertical"
    spacing : 30
    canvas.before:
        Color:
            rgba: (129/255,133/255,137/255,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        Button:
            size_hint: 1,None
            height: 200
            Image:
                source: "./Assets/images/undo.jpg"
                allow_stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50,50
        Button:
            size_hint: 1,None
            height: 200
            Image:
                source: "./Assets/images/redo.png"
                allow_stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50,50
    Button: 
        size_hint: 1,None
        height: 80
        Image:
            source: "./Assets/images/exit.png"
            allow_stretch: True
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: 50,50
    
    Label:
        size_hint: 1,None
        height: 120
