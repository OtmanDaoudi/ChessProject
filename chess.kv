GameUi:

<GameUi>:
    spacing: 10
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        BlackCapturedPieces:
        WhiteCapturedPieces:
    ChessBoardNClocks:
    Options:

<Test@BoxLayout>:
    Label:
        text: "White player name"
        size_hint: 2,None
        background_color: (1,0,0,1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos
        height: 20
    Label:
        size_hint: 1,None
        text: "00:00"
        font_size: "30dp"
        font_name: "./fonts/Lcd.ttf"
        height: 20

