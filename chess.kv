<ChessBoard>:

<ChessBoardNClocks@BoxLayout>:
    orientation: 'vertical'
    size_hint: None,None
    width: 600
    height: 630
    BoxLayout:
        size_hint: 1,None
        height: 25
        Label:
            text: "Black player name"
            size_hint: 2,None
            background_color: (1,0,0,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            height: 25
        Label:
            size_hint: 1,None
            text: "00:00"
            font_size: "30dp"
            font_name: "./fonts/Lcd.ttf"
